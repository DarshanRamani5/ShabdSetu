    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "entities": "^7.0.0",
    "firebase": "^12.3.0",
    "nodemailer": "^7.0.10"
  }
}
